<?xml version="1.0"?>
<ruleset name="POET">
    <description>The POET plugin verification standard.</description>
    <rule ref="Generic.CodeAnalysis.UnconditionalIfStatement"/>
    <rule ref="Generic.Commenting.Fixme"/>
    <rule ref="Generic.Commenting.Fixme.CommentFound">
        <type>warning</type>
    </rule>
    <rule ref="Generic.Commenting.Todo"/>
    <rule ref="Generic.Files.ByteOrderMark"/>
    <rule ref="Generic.Formatting.DisallowMultipleStatements"/>
    <rule ref="Generic.Formatting.NoSpaceAfterCast"/>
    <rule ref="Generic.Formatting.NoSpaceAfterCast.SpaceFound">
        <type>warning</type>
    </rule>
    <rule ref="Generic.PHP.LowerCaseKeyword"/>
    <rule ref="Generic.PHP.LowerCaseKeyword.Found">
        <type>warning</type>
    </rule>
    <rule ref="Generic.Files.LineEndings"/>
    <rule ref="Generic.PHP.DeprecatedFunctions"/>
    <rule ref="Generic.PHP.DisallowShortOpenTag"/>
    <rule ref="Generic.PHP.NoSilencedErrors"/>
    <rule ref="Squiz.Operators.ValidLogicalOperators"/>
    <rule ref="Squiz.Operators.ValidLogicalOperators.NotAllowed">
        <type>warning</type>
    </rule>
    <rule ref="Squiz.PHP.ForbiddenFunctions">
        <properties>
            <property name="forbiddenFunctions" type="array" value="sizeof=>count,delete=>unset,print=>echo,create_function=>null"/>
        </properties>
    </rule>
    <rule ref="Squiz.PHP.DiscouragedFunctions">
        <properties>
            <property name="forbiddenFunctions" type="array" value="error_log=>null,print_r=>null,var_dump=>null,is_null=>null"/>
        </properties>
    </rule>
    <rule ref="Squiz.PHP.Eval"/>
    <rule ref="Zend.Files.ClosingTag"/>
</ruleset>